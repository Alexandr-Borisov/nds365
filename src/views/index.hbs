<div class="main">
      <form class="first-page__form" method="POST" action="/status">
        <div class="block-container__type">
          <h1 class="title">Ваша отрасль</h1>
          <div class="choose-business">
            <div id="choose-type__div">
              <img class="type-logo" src="/images/cart.png" alt="cart">
              <label>
                <input
                class="choose-type"
                  type="checkbox"
                  value="trade"
                  name="group1[]"
                  checked="checked"
                  hidden
                /><span class="choose-company__type">Торгующая компания</span>
              </label>
            </div>
            <div id="choose-type__div">
               <img class="type-logo" src="/images/rest.png" alt="cart">
              <label>
                <input class="choose-type" type="checkbox" value="restoran" name="group1[]" hidden/><span
                  class="choose-company__type"
                  >Ресторан</span
                >
              </label>
            </div>
            <div id="choose-type__div">
               <img class="type-logo" src="/images/hammer.png" alt="cart">
              <label>
                <input class="choose-type" type="checkbox" value="build" name="group1[]" hidden/><span
                  class="choose-company__type"
                  >Строительная компания</span
                >
              </label>
            </div>
            <div id="choose-type__div">
               <img class="type-logo" src="/images/smiled.png" alt="cart">
              <label>
                <input class="choose-type" type="checkbox" value="services" name="group1[]" hidden/><span
                  class="choose-company__type"
                  >Услуги</span
                >
              </label>
            </div>
          </div>
        </div>

        <div class="block-container-inn">
          <div class="inn">
            <h1 class="title">ИНН компании</h1>
            <input
              name="inn"
              type="text"
              class="inn-input"
              placeholder="Поле ввода ИНН"
            />
          </div>
        </div>

                <div class="block-container__form">
          <h1 class="title">Форма бизнеса</h1>
          <div class="choose-business--form">
            <div id="choose-form__div">
              <label>
                <input
                class="choose-form"
                  type="checkbox"
                  value="IP"
                  name="group2[]"
                  checked="checked"
                  hidden
                /><span class="choose-company__form">ИП</span>
              </label>
            </div>
            <div id="choose-form__div">
              <label>
                <input class="choose-form" type="checkbox" value="OOO" name="group2[]" hidden/><span
                  class="choose-company__form"
                  >ООО</span
                >
              </label>
            </div>
          </div>
        </div>
        <button class="btn-next">Далее</button>
      </form>
    </div>
